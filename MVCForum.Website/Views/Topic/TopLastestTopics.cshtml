@using MVCForum.Website.Application
@using MVCForum.Website.ViewModels
@model ActiveTopicsViewModel
@{
    Layout = null;
}

<div class="latesttopics">
  <div class="row">
    <div class="col-md-8">
      <h2>@Html.LanguageString("Home.LatestDiscussions")</h2>
      <div class="leaderboardholders">
        <ul class="list-group-item-text">
          @foreach (var topic in Model.Topics)
          {
              <li><a href="@Html.Raw(topic.Topic.NiceUrl)">@Html.Raw(topic.Topic.Name)</a> đăng bởi <a href="@topic.Topic.User.NiceUrl">@topic.Topic.LastPost.User.UserName</a> <i>@DatesUI.GetPrettyDate(topic.Topic.LastPost.DateCreated.ToString())</i></li>
          }
        </ul>
      </div>

    </div>
    <div class="col-md-4">
      <h2>@Html.LanguageString("Leaderboard.ThisYearsStars")</h2>
      <div class="leaderboardholders alltimeleaderboard">
        <span class="ajaxspinner" title="@Html.LanguageString("Ajax.PleaseWait")">@Html.LanguageString("Ajax.PleaseWait")</span>
      </div>
    </div>
  </div>

</div>

